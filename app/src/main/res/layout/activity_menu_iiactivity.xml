<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D7CCC8"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:src="@raw/tip"

            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIVEL 2"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="70dp" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFamilia"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/btn1"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:text="MIEMBROS DE LA FAMILIA"
        android:drawableLeft="@raw/fami"
        android:drawablePadding="65dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNaturalez"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/btn1"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:text="NATURALEZA"
        android:drawableLeft="@raw/natuz"
        android:drawablePadding="75dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNumeros1"
        android:layout_width="match_parent"
        android:background="@drawable/btn1"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_height="75dp"
        android:text="NUMEROS 1"
        android:drawableLeft="@raw/nmi"
        android:drawablePadding="75dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCasa"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn1"
        android:text="PARTES DE LA CASA"
        android:drawableLeft="@raw/pcas"
        android:drawablePadding="65dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEstados"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn1"
        android:text="ESTADOS DE ÁNIMO"
        android:drawableLeft="@raw/esanimo"
        android:drawablePadding="65dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>

</LinearLayout>