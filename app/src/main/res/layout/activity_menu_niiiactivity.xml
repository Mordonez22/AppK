<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".firstP.MenuNIIIActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:src="@raw/tip"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMedios"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/btn1"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:text="MEDIOS DE COMUNICACIÃ“N"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnProfesiones"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/btn1"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:text="PROFESIONES"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdverbios"
        android:layout_width="match_parent"
        android:background="@drawable/btn1"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_height="75dp"
        android:text="ADVERBIOS"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdjetivos"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn1"
        android:text="ADJETIVOS"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNumeros2"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn1"
        android:text="NUMEROS 2"/>

</LinearLayout>