<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#D7CCC8"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="600dp"
            android:layout_height="150dp"
            android:src="@raw/tip"

            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIVEL 1"
            android:textSize="35sp"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="70dp" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSaludos"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/btn1"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:text="Saludos"
        android:drawableLeft="@raw/salud"
        android:drawablePadding="75dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnPronombres"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/btn1"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:text="PRONOMBRES PERSONALES"
        android:drawableLeft="@raw/pronom"
        android:drawablePadding="75dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDias"
        android:layout_width="match_parent"
        android:background="@drawable/btn1"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_height="75dp"
        android:text="DIAS DE LA SEMANA"
        android:drawableLeft="@raw/dsem"
        android:drawablePadding="75dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnColores"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:layout_margin="15dp"
        android:background="@drawable/btn1"
        android:text="COLORES"
        android:drawableLeft="@raw/clr"
        android:drawablePadding="75dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnVerbos"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:textColor="#000000"
        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn1"
        android:text="VERBOS"
        android:drawableLeft="@raw/ve"
        android:drawablePadding="75dp"
        android:elevation="4dp"
        android:gravity="center_vertical"/>

</LinearLayout>